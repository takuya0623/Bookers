
<h1>Books</h1>
<table class="article">
<tr class="head">
 <th class=>Title</th>
 <th class=>Body</th>
</tr>
<% @books.each do |book| %>
<tr>
 <td class="title"><%= book.title %></td>
 <td class="body"><%= book.body %></td>
 <td><%= link_to "show", "/books/#{book.id}" %></td>
 <td><%= link_to"Edit", "/books/#{book.id}/edit"%></td>
 <td><%= link_to"Destroy","/books/#{book.id}",method: :delete, "data-confirm" => "Are you sure?" %></td>


</tr>
<% end %>
</table>




<h1>New Book</h1>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<p><%=pluralize(@book.errors.full_messages.size,"error")%> error prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f|  %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<div class="text-left">
<%= f.submit 'Create Book' %>
</div>
<% end %>




